
@model IEnumerable<Book>
@{      
    ViewData["Title"] = "Search result";
}

@if(Model.Count<Book>() == 0)
{
    <p>Oops! No matching found </p> 
}else
{
<table class="table table-responsive table-striped mt-5">
    <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>Author</th>
        <th>Edition</th>
        <th>Publisher</th>
    </tr>


    @foreach (Book book in Model)
    {
    <tr>
        <td>@book.ISBN</td>
        <td><a asp-controller="home" asp-action="Book" asp-route-Id="@book.BookId">@book.Title</a></td>
        <td>@book.Author</td>
        <td>@book.Edition</td>
        <td>@book.Publisher</td>
    </tr>
    }



</table>  
}
