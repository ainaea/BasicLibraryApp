@model Book;
@{
    ViewData["Title"] = "Add Book";
}

<div class="text-center">
    <h1 class="display-4">Add Employee</h1>

    <div class="row">
        <div class="col-md-6">


            <form asp-controller="home" asp-action="enterbook" method="post">
                <div class="form-group">
                    <input class="form-control" placeholder="Enter ISBN" asp-for="ISBN" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" placeholder="Enter Title" asp-for="Title" required/>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" placeholder="Author" asp-for="Author" required/>
                    <span class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input class="form-control" placeholder="Enter URL for cover photo" asp-for="CoverPhoto" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" placeholder="Enter edition" asp-for="Edition" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" placeholder="Publisher's name" asp-for="Publisher" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-block btn-danger" value="Add book" />
                    <span class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>


</div>